<%- include('../partials/flash-message-box.ejs') %>
<div class="content fade-in ">
<div class="form-container ">
    <div class="content fade-in">
      <div class="container container-login shadow-lg p-3 bg-body">
        <div class="image-container">
          <img src="/images/formImage.png" alt="" class="rounded w-25 mx-auto d-block ">
        </div>
        <div class="title-container">
          <h2 data-text="Edit&nbsp;Course" class="mt-3 mb-0 title" id="register-title">Edit Course</h2>
        </div>
        <form action="/courses/<%- locals.courseURL %>/edit" method="post" enctype="multipart/form-data"> 
          <% const errors = !locals.errors ? {} : locals.errors %>
          <%- include('../partials/text-input-field.ejs' , {error:errors.courseTitle , fieldName:'courseTitle' , fieldId:'course-courseTitle-field' , placeholder:'Course Title' , boostrapIconName:'bi-book-half' , isEmail:false , value:locals.courseTitle}) %>
          <%- include('../partials/select-input-field.ejs' , {error:errors.stage , fieldName:'stage' , fieldId:'course-stage-field' , selectedOptionText:'Stage' , options:['1st' , '2nd' , '3rd' , '4th'] , selectedOption:locals.stage }) %>
          <%- include('../partials/select-input-field.ejs' , {error:errors.courseType , fieldName:'courseType' , fieldId:'course-courseType-field' , selectedOptionText:'Course Type' , options:['practical' , 'theoretical'] , selectedOption:locals.courseType }) %>
          <%- include('../partials/upload-image-field.ejs') %>
          <%- include('../partials/form-checkbox.ejs' , {fieldId:'create-courses-checkbox' , fieldName:'bothBranches' , labelText:'Both Branches' , value:locals.bothBranches}) %>
          <%- include('../partials/form-submit-button.ejs' , {buttonText:'Edit'}) %>
        </form>
      </div>
    </div>
  </div>
 